
    <!-- ##### Blog Area Start ##### -->
    <div class="blog-area section-padding-0-80">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="blog-posts-area">
                        {{#with this.post}}
                        <!-- Single Featured Post -->
                        <div class="single-blog-post featured-post single-post">
                            <div class="post-thumb">
                                <a href="#"><img src="/img/uploads/{{photo}}" alt="" class="w-100"></a>
                            </div>
                            <div class="post-data">
                                {{!-- <a href="#" class="post-catagory">{{tag}}</a> --}}
                                <a href="#" class="post-title">
                                    <h6>
                                        {{title}}
                                    </h6>
                                </a>
                                <div class="post-meta">
                                    <p class="post-author">By <a href="#">{{pseudonym}}</a> | {{post_date}}</p>
                                            {{{content}}}
                                    <div class="newspaper-post-like d-flex align-items-center justify-content-between">
                                        <!-- Tags -->
                                        {{/with}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="section-heading">
                            <h6>Related</h6>
                        </div>

                        <div class="slick_related">
                            {{#each this.sameCat}}
                                <div class="single-blog-post style-3">
                                    <div class="post-thumb">
                                        <a href="/users/read/{{id}}/{{slug_title}}"><img src="/img/uploads/{{photo}}" alt="" class="w-100 h-img"></a>
                                    </div>
                                    <div class="post-data">
                                        <a href="/posts/menu/{{cat_slugname}}" class="post-catagory">{{catname}}</a>
                                        <div class="post-meta">
                                        <a href="/users/read/{{id}}/{{slug_title}}" class="post-title">
                                            <h6 class="fix_name">{{title}}</h6>
                                        </a>
                                        <p class="post-date"><span>{{post_date}}</span></p>
                                    </div>
                                    </div>
                                </div>
                            {{/each}}
                            <!-- Single Post -->

                            <!-- Single Post -->
                        </div>

                        <!-- Comment Area Start -->
                        <div class="comment_area clearfix">
                           <h5 class="title">Comments ({{this.count}})</h5>
                            <ol>
                                {{#each this.comment}}
                                    {{#compare is_delete "===" 0}}
                                    <!-- Single Comment Area -->
                                    <li class="single_comment_area">
                                        <!-- Comment Content -->
                                        <div class="comment-content d-flex">
                                            <!-- Comment Author -->
                                            <div class="comment-author">
                                                <img src="/img/bg-img/anonymous.png" alt="author">
                                            </div>
                                            <!-- Comment Meta -->
                                            <div class="comment-meta">
                                                <h4>{{displayname}}</h4> <h8>{{comment_date}}</h8>
                                                <h6>{{comment_content}}</h2>
                                            </div>
                                        </div>
                                    </li>
                                    {{/compare}}
                                {{/each}}
                            </ol>
                        </div>

                        <div class="post-a-comment-area section-padding-80-0">
                            <h4>Leave a comment</h4>
                            <!-- Reply Form -->
                            <div class="contact-form-area">
                                <form action="#" method="post">
                                    <div class="row">
                                        {{#if authUser }}
                                            {{#with this.info}}
                                                <div class="col-12 col-lg-12">
                                                    <input type="text" required readonly name="displayname" value="{{displayname}}" class="form-control" id="displayname" placeholder="Name*">
                                                </div>
                                            {{/with}}
                                        {{else}}
                                                <div class="col-12 col-lg-12">
                                                    <input type="text" required name="displayname" class="form-control" id="name" placeholder="Name*">
                                                </div>
                                        {{/if}}
                                        <div class="col-12">
                                            <input type="text"  class="form-control" id="subject" placeholder="Website">
                                        </div>
                                        <div class="col-12">
                                            <textarea  required class="form-control" name="content" id="content" cols="30" rows="10" placeholder="Message"></textarea>
                                        </div>
                                        <div class="col-12 text-center">
                                            <button class="btn newspaper-btn mt-30 w-100" type="submit">Submit Comment</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Blog Area End ##### -->

