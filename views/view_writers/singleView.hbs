
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
          </li>
          <li class="breadcrumb-item active">Overview</li>
        </ol>
        <!-- Icon Cards-->
        <div class="row">
          <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-primary o-hidden h-100">
              <div class="card-body">
                <div class="card-body-icon">
                  <i class="fas fa-fw fa-comments"></i>
                </div>
                <div class="mr-5"><h3><strong>{{this.count}} Post </strong></h3></div>
              </div>
              <a class="card-footer text-white clearfix small z-1" href="/writers">
                <span class="float-left">View Details</span>
                <span class="float-right">
                  <i class="fas fa-angle-right"></i>
                </span>
              </a>
            </div>
          </div>
          <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-warning o-hidden h-100">
              <div class="card-body">
                <div class="card-body-icon">
                  <i class="fas fa-fw fa-list"></i>
                </div>
                <div class="mr-5"><h3><strong> {{this.cancelCount}} Cancel </strong></h3></div>
              </div>
              <a class="card-footer text-white clearfix small z-1" href="/writers/status/3">
                <span class="float-left">View Details</span>
                <span class="float-right">
                  <i class="fas fa-angle-right"></i>
                </span>
              </a>
            </div>
          </div>
          <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-success o-hidden h-100">
              <div class="card-body">
                <div class="card-body-icon">
                  <i class="fas fa-fw fa-shopping-cart"></i>
                </div>
                <div class="mr-5"><h3><strong>{{this.postedCount}} Posted </strong></h3></div>
              </div>
              <a class="card-footer text-white clearfix small z-1" href="/writers/status/2">
                <span class="float-left">View Details</span>
                <span class="float-right">
                  <i class="fas fa-angle-right"></i>
                </span>
              </a>
            </div>
          </div>
          <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-danger o-hidden h-100">
              <div class="card-body">
                <div class="card-body-icon">
                  <i class="fas fa-fw fa-life-ring"></i>
                </div>
                <div class="mr-5"><h3><strong>{{this.approCount}} Wait For Approval </strong></h3></div>
              </div>
              <a class="card-footer text-white clearfix small z-1" href="/writers/status/4">
                <span class="float-left">View Details</span>
                <span class="float-right">
                  <i class="fas fa-angle-right"></i>
                </span>
              </a>
            </div>
          </div>
        </div>

        <!-- Area Chart Example-->
        <div class="card mb-3">
          <div class="card-header">
            <i class="fas fa-chart-area"></i>
            Area Chart Example</div>
          <div class="card-body">
            <canvas id="myAreaChart" width="100%" height="30"></canvas>
          </div>
          <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>

        <!-- DataTables Example -->
        <div class="card mb-3">
          <div class="card-header">
            <i class="fas fa-table"></i>
            POST MANAGER</div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Slug Title</th>
                    <th>Category</th>
                    <th>Summanry</th>
                    <th>View</th>
                    <th>Post Date</th>
                    <th>Last Update</th>
                    <th>Tag</th>
                    <th>Status</th>
                    <th>Tools</th>
                  </tr>
                </thead>{{#each this.post }}
                  <tr>
                   <td>{{id}}</td>
                    <td>{{title}}</td>
                    <td>{{slug_title}}</td>
                    <td>{{id_category}}</td>
                    <td>{{summary}}</td>
                    <td>{{views}}</td>
                    <td>{{post_date}}</td>
                    <td>{{last_update}}</td>
                    <td>{{tag}}</td>
                    <td style="width: 15%">
                      {{#compare status "===" 4}}
                        <a class="btn btn-warning form-control" >WaitApproval</a>&nbsp;
                      {{/compare}}
                       {{#compare status "===" 3}}
                        <a class="btn btn-danger form-control">Cancel</a>&nbsp;
                      {{/compare}}
                      {{#compare status "===" 2}}
                        <a class="btn btn-success form-control">Posted</a>&nbsp;
                      {{/compare}}
                      {{#compare status "===" 1}}
                        <a class="btn btn-outline-primary form-control">Loading</a>&nbsp;
                      {{/compare}}
                    </td>
                      {{#compare status "===" 4}}
                          {{#compare is_delete "===" 0 }}
                            <td>
                                <a class="btn btn-primary form-control"  href="/writers/edit/{{id}}"><i class="fa fa-pencil"></i></a> &nbsp;
                                <a class="btn btn-danger form-control"  href="/writers/delete/{{id}}"><i class="fa fa-trash"></i></a>
                            </td>
                            {{else}}
                            <td>
                               <a class="btn btn-primary form-control" href="/writers/backup/{{id}}">Backup</a>
                            </td>
                          {{/compare}}
                     {{/compare}}

                     {{#compare status "===" 3}}
                          {{#compare is_delete "===" 0 }}
                            <td>
                                <a class="btn btn-primary form-control"  href="/writers/edit/{{id}}"><i class="fa fa-pencil"></i></a> &nbsp;
                                <a class="btn btn-danger form-control"  href="/writers/delete/{{id}}"><i class="fa fa-trash"></i></a>
                            </td>
                            {{else}}
                            <td>
                               <a class="btn btn-primary form-control" href="/writers/backup/{{id}}">Backup</a>
                            </td>
                          {{/compare}}
                     {{/compare}}
                     {{#compare status "===" 2}}
                          {{#compare is_delete "===" 0 }}
                            <td></td>
                            {{else}}
                            <td>
                               <a class="btn btn-primary form-control" href="/writers/backup/{{id}}">Backup</a>
                            </td>
                          {{/compare}}
                     {{/compare}}
                      {{#compare status "===" 1}}
                          {{#compare is_delete "===" 0 }}
                            <td></td>
                            {{else}}
                            <td>
                               <a class="btn btn-primary form-control" href="/writers/backup/{{id}}">Backup</a>
                            </td>
                          {{/compare}}
                     {{/compare}}
                    {{/each}}
                  </tr>
                </tbody>
              </table>
              <nav>
                <ul class="pagination">
                  {{#compare this.preButton "===" 0}}
                      <li class="page-item"><a class="page-link" href="">Previous</a></li>
                      {{else}}
                      <li class="page-item active"><a class="page-link" href="?page={{this.preButton}}">Previous</a></li>
                  {{/compare}}
                  {{#each this.page_numbers}}
                    <li class="page-item {{#if active }} active {{/if}}"><a class="page-link" href="?page={{value}}">{{value}}</a></li>
                  {{/each}}
                   {{#compare this.nextButton "===" 0}}
                      <li class="page-item"><a class="page-link" href="">Next</a></li>
                      {{else}}
                      <li class="page-item active"><a class="page-link" href="?page={{this.nextButton}}">Next</a></li>
                  {{/compare}}
                </ul>
            </nav>
            </div>
          </div>
          <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>


