<form id="subcategoryForm" action="" method="POST">
    <div class="card shadow">
        <h5 class="card-header">
            Edit User
        </h5>
        <div class="card-body">
                <div class="form-group">
                <label for="txtCatName">User ID </label>
                <input type="text" readonly class="form-control"  value="{{ this.user.id }}" name ="id">
            </div>
            <div class="form-group">
                <label for="txtCatName">UserName </label>
                <input type="text" readonly class="form-control"  id = "title" value="{{ this.user.username }}"  name="username">
            </div>

            <label>Permission: </label>
            <select name="permission" class="custom-select">
                {{#each permission}}
                <option value={{id}} {{#if isSelected}}selected{{/if}}>{{id}} - {{key}}</option>
                {{/each}}
            </select>

            <div class="form-group">
                <label for="">Status</label> 
                <select name="is_delete" class="form-control">
                    <option value="0">0</option>
                    <option value="1" {{#if this.user.is_delete }}selected{{/if}} >1</option>
                </select>
            </div>
        </div>

        <div class="card-footer text-right">
            {{!-- {{#if is_sesuccessful}}
