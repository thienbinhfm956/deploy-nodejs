<body>

    <!-- ##### Header Area Start ##### -->
    <header class="header-area">

        <!-- Top Header Area -->
        <div class="top-header-area">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="top-header-content d-flex align-items-center justify-content-between">
                            <!-- Logo -->
                            <div class="logo">
                                <a href="/"><img src="/img/core-img/logo.png" alt=""></a>
                            </div>

                            <!-- Login Search Area -->
                            <div class="login-search-area d-flex align-items-center">
                                <!-- Login -->
                                <div class="login d-flex">

                                </div>
                                <!-- Search Form -->
                                {{!-- <div class="search-form">
                                    <form action="#" method="post">
                                        <input type="search" name="search" class="form-control" placeholder="Search">
                                        <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                                    </form>
                                </div> --}}


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navbar Area -->
        <div class="newspaper-main-menu" id="stickyMenu">
            <div class="classy-nav-container breakpoint-off">
                <div class="container">

                    <!-- Menu -->
                    <nav class="classy-navbar justify-content-between" id="newspaperNav">

                        <!-- Logo -->
                        <div class="logo">
                            <a href="/"><img src="/img/core-img/logo.png" alt=""></a>
                        </div>

                        <!-- Navbar Toggler -->
                        <div class="classy-navbar-toggler">
                            <span class="navbarToggler"><span></span><span></span><span></span></span>
                        </div>

                        <!-- Menu -->
                        <div class="classy-menu">

                            <!-- close btn -->
                            <div class="classycloseIcon">
                                <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                            </div>

                            <!-- Nav Start -->
                            <div class="classynav pull-right ">
                                <ul class=" ">
                                    <li>
                                        <form id="frmLogout" action="/users/logout" method="POST"></form>
                                    </li>
                                    <li>
                                        <form action="/posts/search" method="get" class="form-inline my-2 my-lg-0">
                                            <input class="form-control mr-sm-2" type="text" placeholder="Search"
                                                aria-label="Search" name="keyword">
                                            <button class="btn btn-outline-success my-2 my-sm-0"
                                                type="submit">Search</button>
                                        </form>
                                    </li>
                                    <!-- Process Login/Logout -->
                                    {{#if isAuthenticated}}
                                    <li class=""><a href="#">
                                            <i class="fa fa-snowflake-o text-success" aria-hidden="true"></i>
                                            <strong class="text-success">{{authUser.displayname}}</strong>
                                        </a>
                                        <ul class="dropdown">
                                            <li><a href="/users/profile"> <i class="fa fa-user" aria-hidden="true"></i>
                                                    Profile</a>
                                            </li>
                                            <li>
                                                <div class="dropdown-divider"></div>
                                            </li>
                                            <li> <a href="javascript: $('#frmLogout').submit();">
                                                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                                                    Sign Out
                                                </a>
                                            </li>

                                            {{#if is_admin}}
                                            <li>
                                                <a href="/managers"> <i class="fa fa-folder-o" aria-hidden="true"></i>
                                                    <strong class="text-success">Managerment</strong>
                                                </a>
                                            </li>
                                            {{else if is_writer}}
                                            <li>
                                                <a href="/writers"> <i class="fa fa-pencil" aria-hidden="true"></i>
                                                    <strong class="text-success">
                                                        Managerment
                                                    </strong>
                                                </a>
                                            </li>
                                            {{else if is_editor}}
                                            <li>
                                                <a href="/editors"> <i class="fa fa-pencil" aria-hidden="true"></i>
                                                    <strong class="text-success">
                                                        Managerment
                                                    </strong>
                                                </a>
                                            </li>
                                            {{/if}}

                                        </ul>
                                    </li>

                                    {{else}}
                                    <li> <a href="/users/login"><strong class=" text-danger">Login</strong> </a> </li>
                                    <li> <a href="/users/register"><strong class="text-danger">Register</strong></a>
                                    </li>
                                    {{/if}}
                                </ul>

                            </div>

                            <div class="classynav">
                                <ul>
                                    <li class="active"><a href="/">Home</a></li>


                                    {{!-- LOAD CATEGORIES --}}
                                    {{!-- from middleware --}}
                                    {{#each post_categories_mdw}}
                                    <li><a href="/posts/menu/{{slug_name}}">{{name}}</a>
                                        <ul class="dropdown" style="width: 260px">
                                            {{#each ../post_subcategories_mdw}}
                                            {{#eq ../id  id_category}}
                                            <li> <a href="/posts/menu/{{../slug_name}}/{{slug_name}}"> {{name}}</a></li>
                                            {{/eq}}

                                            {{/each}}

                                        </ul>
                                    </li>
                                    {{/each}}

                                    <li><a href="/contact">Contact</a></li>

                                </ul>

                            </div>
                            <!-- Nav End -->
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ##### Header Area End ##### -->

